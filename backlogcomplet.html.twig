
{% extends 'backPO.html.twig'%}

        {% block content %}

            <div class="content-body"><!-- Basic initialization -->

            <section id="initialization">

                <div class="row">

                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="form-section"><i class="ft-clipboard"></i> Backlog produit</h4>
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-content collapse show">
                                <form method="post">
                                    <div class="card-block">
                                    <div class="card-body">
                                        <fieldset class="form-group">
                                    <input type="text" class="form-control" name="valeurArecuperer" >
                                        </fieldset>
                                        <label class="col-md-3 label-control" for="projectinput5"></label>
                                        <button type="submit" class="btn btn-primary" >
                                            <i class="fa fa-check-square-o"></i> entrer nom du projet
                                        </button>
                                        </fieldset>

                                    </div>
                                        </div>
                                </form>
                                <div class="card-body card-dashboard">
                                    <p class="card-text"> Le Backlog produit selon le nom du projet saisie
                                    </p>
                                    <table class="table table-striped table-bordered responsive dataex-rowre-basic">
                                        <thead>
                                        <tr>
                                            <th>num feature</th>
                                            <th>feature</th>
                                            <th>num user story</th>
                                            <th>user story</th>
                                            <th>prio</th>

                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>

                                            {% for UserStoryBacklogProduit in UserStoryBacklogProduits %}


                                            <td> {{ UserStoryBacklogProduit.idBacklogFeature }}</td>
                                            <td> {{ UserStoryBacklogProduit.feature }}</td>

                                            <td> {{ UserStoryBacklogProduit.idUserStoryBacklogProduit }}</td>
                                            <td> {{ UserStoryBacklogProduit.userStoryBp }}</td>
                                            <td> {{ UserStoryBacklogProduit.priorityBp }}</td>



                                        </tr>
                                        {%  endfor %}

                                        </tbody>



                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="oldColumnChart"></div>
                <div id="newColumnChart"></div>
                <div id="diffColumnChart"></div>

                <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                <script type="text/javascript">
                    {{ gc_draw([oldColumnChart], ['oldColumnChart']) }}
                </script>
            </section>
        {% endblock %}